{
  "name": "mcp-gateway",
  "version": "0.1.0",
  "description": "MCP Knowledge Hub Gateway",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node scripts/patch-mcp-requires.cjs",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp-server.js",
    "index-example": "node scripts/index-example-doc.cjs",
    "tools": "node scripts/mcp-tools-menu.cjs",
    "supervisor": "node dist/supervisor.js",
    "inbox-supervisor": "node dist/supervisor.js",
    "dev": "ts-node src/index.ts",
    "test": "node --max-old-space-size=8192 --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:ci": "node --max-old-space-size=8192 --experimental-vm-modules node_modules/jest/bin/jest.js --maxWorkers=2",
    "test:no-chunking": "node --max-old-space-size=8192 --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=chunking",
    "test:chunking-only": "npm run build && node scripts/run-chunking-tests.cjs",
    "test:all": "npm run test:no-chunking && npm run test:chunking-only"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@qdrant/js-client-rest": "~1.8.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "html-to-text": "^9.0.5",
    "openai": "^6.22.0",
    "p-limit": "^7.3.0",
    "puppeteer": "^24.37.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
